<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_location_2" />

            <TextView
                android:id="@+id/mis_viajes_lugar_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guadalajara_jalisco"
                android:textSize="@dimen/body_text"
                android:layout_gravity="center"
                android:textColor="@color/azul_marino"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginRight="150dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mis_viajes_imagen_iv"
            android:layout_width="370dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:clipToOutline="true"
            android:src="@drawable/guadalajara" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="165dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/friends"
                android:textColor="@color/azul_marino"
                android:layout_gravity="center"
                android:textSize="@dimen/body_text"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/montserrat_regular" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/amigo1"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/round_circle" />

                    <ImageView
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/round_circle" />
                    <ImageView
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/round_circle" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/fechas_mis_viajes"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="@string/fechas"
            android:textColor="@color/azul_marino"
            android:textSize="@dimen/subtitle_size"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginLeft="11dp" />

        <TextView
            android:id="@+id/mis_viajes_rango_fechas_tv"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="@string/rango_fecha1"
            android:textColor="@color/azul_marino"
            android:textSize="@dimen/body_text"
            android:layout_marginLeft="11dp"
            android:fontFamily="@font/montserrat_regular"
            />

    </LinearLayout>


</LinearLayout>