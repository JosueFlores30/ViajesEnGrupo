<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SquadTrek" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_fuerte</item>
        <item name="colorPrimaryVariant">@color/azul_marino</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_blanco</item>
        <item name="colorSecondaryVariant">@color/azul_blanco</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CalenderViewCustom" parent="Theme.SquadTrek">
        <item name="colorAccent">@color/azul_fuerte</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/azul_marino</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="WeekDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/azul_marino</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="DayCustomText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/calendar_day_selector</item>
    </style>

    <style name="CalendarViewMonthText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/azul_marino</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
</resources>