<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"

    tools:context=".navBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.70"
        android:layout_height="45dp"
        android:elevation="12dp"
        android:background="@drawable/round_button_white"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnViajes"
            android:layout_marginRight="23dp"
            android:layout_width="24dp"
            android:layout_height="26.12dp"
            android:src="@drawable/nav_airplane"/>
        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/nav_home"/>
        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="19.19dp"
            android:layout_height="21.64dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/nav_user"/>
        <ImageButton
            android:id="@+id/btnAmigos"
            android:layout_width="24.57dp"
            android:layout_height="24.52dp"
            android:src="@drawable/nav_friends"/>


    </LinearLayout>
    <ImageButton
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:elevation="12dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:background="@drawable/round_button_white"
        android:src="@drawable/ic_add"/>
</LinearLayout>