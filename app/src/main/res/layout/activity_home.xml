<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <include layout="@layout/activity_app_bar"/>

        <TextView
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="@string/username"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/azul_marino"
            android:textSize="@dimen/title_size"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/obregon"
                android:textSize="@dimen/body_text"
                android:textColor="@color/azul_marino"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginRight="150dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/i1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/wave_home"
            android:layout_marginBottom="-10dp"
            android:layout_height="wrap_content">
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/azul_blanco"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nueva_aventura"
                android:textSize="@dimen/body_text"
                android:layout_marginLeft="17dp"
                android:textColor="@color/azul_marino"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginRight="150dp" />

            <TextView
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:text="@string/mis_viajes"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/azul_marino"
                android:layout_marginBottom="15dp"
                android:textSize="@dimen/title_size"/>

            <ListView
                android:id="@+id/listview_home"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            </ListView>



        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <include layout="@layout/activity_nav_bar"/>
    </RelativeLayout>

</RelativeLayout>