<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".EventoView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iconTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/airplane"/>
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombra evento"
            android:textSize="@dimen/subtitle_size"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/azul_marino"/>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="156dp"
        android:layout_height="0.5dp"
        android:background="@color/azul_marino"/>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/clock"/>
        <TextView
            android:id="@+id/txtHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agrega hora"
            android:textSize="@dimen/body_text"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/azul_marino"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_location"/>
        <TextView
            android:id="@+id/txtUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agrega ubicaciÃ³n"
            android:textSize="@dimen/body_text"
            android:layout_marginLeft="13dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/azul_marino"/>
    </LinearLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encargado"
        android:textSize="@dimen/body_text"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/azul_marino"/>
    <ImageView
        android:id="@+id/imgEncargado"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/round_circle"/>

</LinearLayout>