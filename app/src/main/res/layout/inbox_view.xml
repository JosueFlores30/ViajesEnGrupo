<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/inbox_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/round_circle" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inbox_nombre_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_usuario"
                android:textColor="@color/azul_marino"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="85dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/body_text"
                />

            <TextView
                android:id="@+id/inbox_mensajes_tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/azul_marino"
                android:layout_marginRight="85dp"
                android:text="@string/Mensaje_usuario"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="@dimen/body_text"
                />
        </LinearLayout>


    </LinearLayout>

    <View

        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/azul_marino"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</LinearLayout>
